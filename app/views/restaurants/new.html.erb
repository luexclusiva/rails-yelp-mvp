<div class="container mt-3">
  <h1>New Restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
      <%= f.submit class: 'btn btn-primary' %>
    </div>  
  <% end %>
  
  <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>

</div>